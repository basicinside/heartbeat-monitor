<?xml version="1.0" encoding="UTF-8"?>
<kml xmlns="http://www.opengis.net/kml/2.2">
  <Document>
    <name>Heartbeat Nodes</name>
    <description>KML Karte der aktiven Nodes innerhalb der letzten Woche</description>
    <% @styles.each { |icon, url| %>
    <Style id="<%= icon %>">
      <IconStyle>
	<scale>0.5</scale>
        <Icon>
          <href><%= url %></href>
        </Icon>
      </IconStyle>
    </Style>
    <% } %>
    <% @nodes.each { |node| %>
    <Placemark>
      <name><%= node.name %></name>
      <description>Field</description>
      <styleUrl>#wireless</styleUrl>
      <Point>
        <coordinates><%= node.lon %>,<%= node.lat %></coordinates>
      </Point>
    </Placemark>
    <% } %>
  </Document>
</kml>
