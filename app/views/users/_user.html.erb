<div id="page"> 
	<% form_for @user do |form| %>  
	 <%= form.error_messages %>  
	   
	     <%= form.label :username, "Benutzername" %>  
	     <%= form.text_field :username %>  
	   <br />  
	     <%= form.label :email, "Email" %>  
	     <%= form.text_field :email %>  
		  <br />  
			<%= form.label :location, "Gebiet" %>
			<%= form.collection_select :location_id, Location.all, :id, :name %>
			oder <%= link_to "Gebiet hinzufuegen", new_location_url %>
		  <br />  
			<%= form.label :group, "Gruppe" %>
			<%= form.collection_select :group_id, Group.all, :id, :name %>
			oder <%= link_to "Gruppe hinzufuegen",new_group_url %>
		 <br />
			<%= form.label :party, "Partei" %>
			<%= form.collection_select :party_id, Party.all, :id, :name %>
			oder <%= link_to "Partei hinzufuegen", new_party_url %>
		 <br />
		
		 <%= form.label :password, "Kennwort aendern" %>  
		 <%= form.password_field :password %>  
		<br />  
		<%= form.label :password_confirmation, "Kennwort Bestaetigung" %>  
		<%= form.password_field :password_confirmation %>  
		<br />  
		<%= form.submit "Speichern" %>  


	 <% end %>
</div>
